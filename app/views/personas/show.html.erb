
<div class="container-md bg-light">
<%# this wil show all images just have to style them ;) %>
  <div class="pictures">
  <div class="big-pics">
  <%if @persona.photos.attached? %>
      <%= cl_image_tag @persona.photos.first.key, class: "pic-big" %>
  <% end %>
  </div>
  <div class="small-pics">
  <%# these are the 4 small pics %>
  <%if @persona.photos.attached? %>
      <%= cl_image_tag @persona.photos.second.key, class: "pic-small" %>
  <% end %>
  <%if @persona.photos.attached? %>
      <%= cl_image_tag @persona.photos.third.key, class: "pic-small" %>
  <% end %>
  <%if @persona.photos.attached? %>
      <%= cl_image_tag @persona.photos.fourth.key, class: "pic-small" %>
  <% end %>
  <%if @persona.photos.attached? %>
      <%= cl_image_tag @persona.photos.fifth.key, class: "pic-small" %>
  <% end %>
  </div>

</div>
</div>


<div class="container bg-light d-flex flex-row">

<div class="col-8 m-0">
  <div class="info">
  <%# this is some info you can use %>
    <h1><%= @persona.name %></h1>
    <p>Location: <%= @persona.location %></p>
  </div>

  <div class="description ">
    <p>Description:<br><%= @persona.description %></p>
  </div>
</div>

<div class="form col-3">
  <p>form here pls </p>
</div>

</div>

<%# make these some nice buttons pls thanks :) %>
  <%= link_to 'add review', new_booking_review_path(@persona) %>
  <%= link_to 'back', personas_path %>
  <%if current_user == @persona.user %>
    <%= link_to 'Delete', persona_path(@persona), method: :delete  %>
    <%= link_to 'Edit', edit_persona_path(@persona) %>
  <%end %>
